{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "lib": ["ESNext"],
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "./dist",
      "baseUrl": "./",              // Ensures module resolution works across folders
      "paths": {
        "*": ["node_modules/*"]      // Ensures that packages can be found in node_modules
      }
    },
    "include": ["src/**/*", "schema/**/*"]  // Make sure both src and schema folders are included
  }
  